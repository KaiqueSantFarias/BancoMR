<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <ImageView
        android:id="@+id/img_saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/saldo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:id="@+id/text_saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@id/img_saldo"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"/>


    <ImageView
        android:id="@+id/img_faturas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@id/img_saldo"
        android:src="@drawable/fatura"
        />

    <TextView
            android:id="@+id/text_faturas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faturas"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_toEndOf="@id/text_saldo"
            android:layout_below="@id/img_faturas"
            android:layout_marginTop="30dp"
            android:layout_marginStart="150dp"/>


    <ImageView
        android:id="@+id/img_transferencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/transferencia"
        android:layout_below="@id/text_saldo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/text_transferencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transferência"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@id/img_transferencia"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"/>


    <ImageView
        android:id="@+id/img_poupanca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/poupanca"
        android:layout_below="@id/text_faturas"
        android:layout_toEndOf="@id/img_transferencia"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/text_poupanca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Poupança"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_toEndOf="@id/text_transferencia"
        android:layout_below="@id/img_poupanca"
        android:layout_marginTop="30dp"
        android:layout_marginStart="95dp"/>











</RelativeLayout>
</ScrollView>